/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

page {
  height: 100%;
}

.wrap {
  width: 100%;
  height: 100%;
}

/** 布局公共样式 */
.flex-column {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.flex-row {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.flex-row-reverse {
  display: flex;
  flex-direction: row-reverse;
  align-items: center;
}

.flex-column-reverse {
  display: flex;
  flex-direction: column-reverse;
  align-items: center;
}

.flex-center {
  display: flex;
  align-items: center;
  justify-content: center;
}

/** 公共样式组 */
.shade {
  width: 100%;
  height: 100%;
  position: fixed;
  background-color: rgba(0, 0, 0, 0.45);
  z-index: 9;
}

.bgImg {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
}

.text_ellipsis {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.text_ellipsis_line {
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical; 
}


/** 业务公共样式 */
.userinfo {
  display: flex;
  align-items: center;
}

.userinfo image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 80rpx;
}

.userinfo .nickName {
  color: #FFF;
  font-size: 24rpx;
  margin-left: 22rpx;
}


/** 活动 */
.activities {
  width: 710rpx;
  padding: 0 20rpx;
}

.activity {
  width: 100%;
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  padding: 20rpx 0;
  border-bottom: 1rpx #F2F2F2 solid;
}

.activity:nth-child(2) {
  padding-top: 0;
}

.activity .poster {
  width: 200rpx;
  height: 132rpx;
  border-radius: 10rpx;
}

.activity .desc {
  width: 480rpx;
  display: flex;
  flex-direction: column;
  color: #1A1A1A;
}

.activities .desc .title {
  width: 100%;
  height: 28rpx;
  line-height: 28rpx;
  font-size: 28rpx;
}

.activities .desc .team {
  width: 100%;
  font-size: 24rpx;
  margin-top: 10rpx;
}

.activities .desc .sign {
  display: flex;
  align-items: center;
  margin-top: 10rpx;
}

.desc .sign .status {
  width: 88rpx;
  height: 32rpx;
  border-radius: 10rpx;
  border: 2rpx #4CAF50 solid;
  color: #4CAF50;
  font-size: 24rpx;
  line-height: 32rpx;
  text-align: center;
}

.sign .ending {
  border: 2rpx #808080 solid !important;
  color: #808080 !important;
}

.desc .sign .tip {
  width: 370rpx;
  margin-left: 20rpx;
  color: #1A1A1A;
  font-size: 24rpx;
  display: flex;
  flex-direction: column;
}

