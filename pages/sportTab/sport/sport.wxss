/* pages/sportTab/sport/sport.wxss */

.header {
    width: 750rpx;
    height: 180rpx;
    background-color: #4EB052;
    position: relative;
    top: 0;
    left: 0;
}

.userinfo {
    margin-left: 36rpx;
}

.tabs {
    width: 750rpx;
    height: 60rpx;
    justify-content: space-around;
    color: #FFF;
    font-size: 28rpx;
    position: absolute;
    bottom: 0;
}

.tabs .tab {
    position: relative;
    top: 0;
    left: 0;
}

.tabs .selected::after {
    content: "";
    width: 140%;
    height: 4rpx;
    background-color: #FFF;
    position: absolute;
    bottom: -10rpx;
    left: -20%;
    z-index: 2;
}

.title {
    height: 80rpx;
    line-height: 100rpx;
    color: #1A1A1A;
    font-size: 28rpx;
}

/** banner */
.banner {
    width: 710rpx;
    padding: 0 20rpx;
}

.swiper {
    width: 710rpx;
    height: 364rpx;
    border-radius: 10rpx;
}

.swiperItem {
    width: 100%;
    height: 100%;
    border-radius: 10rpx;
}

.sport {
    background-color: #FF9901;
    color: #FFF;
}

.sport .total text:nth-child(1){
    font-size: 72rpx;
}

.sport .total text:nth-child(2){
    font-size: 24rpx;
    margin-left: 8rpx;
}


/** 排行榜 */
.ranks {
    width: 750rpx;
    align-items: flex-start;
}

.ranks .title {
    position: relative;
    left: 20rpx;
}

.ranks .rank {
    width: 100%;
    height: 110rpx;
    position: relative;
    top: 0;
    left: 0;
    border-bottom: 1rpx #F2F2F2 solid;
}

.rank:nth-child(2) {
    border-bottom: 6rpx #F7F7F7 solid; 
}

.rank:nth-last-child(1) {
    border: 0;
}

.rank text:nth-child(1) {
    color: #808080;
    font-size: 28rpx;
    margin-left: 40rpx;
}

.rank image {
    width: 70rpx;
    height: 70rpx;
    border-radius: 70rpx;
    margin-left: 20rpx;
}

.rank text:nth-child(3) {
    color: #1A1A1A;
    font-size: 28rpx;
    margin-left: 40rpx;
}

.rank text:nth-last-child(1) {
    color: #1A1A1A;
    font-size: 28rpx;
    position: absolute;
    right: 40rpx;
}



