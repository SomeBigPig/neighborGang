/* pages/sportTab/sport/sport.wxss */

.header {
    width: 750rpx;
    height: 180rpx;
    background-color: #4EB052;
    position: relative;
    top: 0;
    left: 0;
}

.userinfo {
    margin-left: 36rpx;
}

.tabs {
    width: 750rpx;
    height: 60rpx;
    justify-content: space-around;
    color: #FFF;
    font-size: 28rpx;
    position: absolute;
    bottom: 0;
}

.tabs .tab {
    position: relative;
    top: 0;
    left: 0;
}

.tabs .selected::after {
    content: "";
    width: 140%;
    height: 4rpx;
    background-color: #FFF;
    position: absolute;
    bottom: -10rpx;
    left: -20%;
    z-index: 2;
}

.title {
    height: 80rpx;
    line-height: 100rpx;
    color: #1A1A1A;
    font-size: 28rpx;
}

/** banner */
.banner {
    width: 710rpx;
    padding: 0 20rpx;
}

.swiper {
    width: 710rpx;
    height: 364rpx;
    border-radius: 10rpx;
}

.swiperItem {
    width: 100%;
    height: 100%;
    border-radius: 10rpx;
}

.sport {
    background-color: #FF9901;
    color: #FFF;
}

.sport .total text:nth-child(1){
    font-size: 72rpx;
}

.sport .total text:nth-child(2){
    font-size: 24rpx;
    margin-left: 8rpx;
}


/** 活动 */
.activities {
    width: 710rpx;
    padding: 0 20rpx;
}

.activity {
    width: 100%;
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    padding: 20rpx 0;
    border-bottom: 1rpx #F2F2F2 solid;
}

.activity:nth-child(2) {
    padding-top: 0;
}

.activity .poster {
    width: 200rpx;
    height: 132rpx;
    border-radius: 10rpx;
}

.activity .desc {
    width: 480rpx;
    display: flex;
    flex-direction: column;
    color: #1A1A1A;
}

.activities .desc .title {
    width: 100%;
    height: 28rpx;
    line-height: 28rpx;
    font-size: 28rpx;
}

.activities .desc .team {
    width: 100%;
    font-size: 24rpx;
    margin-top: 10rpx;
}

.activities .desc .sign {
    display: flex;
    align-items: center;
    margin-top: 8rpx;
}

.desc .sign .status {
    width: 88rpx;
    height: 32rpx;
    border-radius: 10rpx;
    border: 2rpx #4CAF50 solid;
    color: #4CAF50;
    font-size: 24rpx;
    line-height: 32rpx;
    text-align: center;
}

.desc .sign .tip {
    width: 370rpx;
    margin-left: 20rpx;
    color: #1A1A1A;
    font-size: 24rpx;
    display: flex;
    flex-direction: column;
}

.sign .tip:nth-child(2) {
    margin-top: 8rpx;
} 

